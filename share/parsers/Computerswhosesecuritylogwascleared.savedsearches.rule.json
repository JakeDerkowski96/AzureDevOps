{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspace": {
            "type": "String"
        }
    },
    "resources": [
        {
            "properties": {
                "displayName": "Computers whose security log was cleared",
                "category": "Security",
                "query": "search in (SecurityEvent) EventID == 1102 | summarize LogClearedCount = count() by Computer | limit 500000",
                "version": 2
            },
            "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/Security(5q-loganalytics-sentinel)_DevicesWithSecurityLogCleared')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/savedSearches",
            "apiVersion": "2020-08-01"
        }
    ]
}
